{
    "id": "sample-with-connection",
    "description": "Sends a message to Service Bus and notifies in email",
    "title": "Simple sample to send message",
    "iconUri": "https://connectoricons-prod.azureedge.net/servicebus/icon_1.0.1306.1889.png",
    "data": {
        "definition": {
            "$schema": "https://schema.management.azure.com/providers/Microsoft.Logic/schemas/2016-06-01/workflowdefinition.json#",
            "actions": {
                "Send_an_email_(V2)": {
                    "inputs": {
                        "body": {
                            "Body": "<p>We have sent a message from service bus - @{body('Send_message')} successfully</p>",
                            "Subject": "Message successfully sent",
                            "To": "@parameters('EmailId')"
                        },
                        "host": {
                            "connection": {
                                "name": "@parameters('$connections')['office365']['connectionId']"
                            }
                        },
                        "method": "post",
                        "path": "/v2/Mail"
                    },
                    "runAfter": {
                        "Send_message": [
                            "Succeeded"
                        ]
                    },
                    "type": "ApiConnection"
                },
                "Send_message": {
                    "inputs": {
                        "body": {
                            "ContentData": "@{base64('Sending message from Automation task')}",
                            "SessionId": "@guid()"
                        },
                        "host": {
                            "connection": {
                                "name": "@parameters('$connections')['servicebus_1']['connectionId']"
                            }
                        },
                        "method": "post",
                        "path": "/@{encodeURIComponent(encodeURIComponent(parameters('QueueName')))}/messages",
                        "queries": {
                            "systemProperties": "None"
                        }
                    },
                    "runAfter": {},
                    "type": "ApiConnection"
                }
            },
            "contentVersion": "1.0.0.0",
            "outputs": {},
            "parameters": {
                "$connections": {
                    "defaultValue": {},
                    "type": "Object"
                },
                "ResourceName": {
                    "type": "String",
                    "metadata": {
                        "isLinkedResource": true,
                        "sourceParameter": "name"
                    }
                },
                "EmailId": {
                    "type": "String",
                    "metadata": {
                        "required": true,
                        "displayName": "Email Id",
                        "placeholder": "Enter the email address to send email."
                    }
                },
                "QueueName": {
                    "type": "String",
                    "metadata": {
                        "required": true,
                        "displayName": "Queue Name",
                        "placeholder": "Enter the queue name to receive message."
                    }
                }
            },
            "triggers": {
                "manual": {
                    "inputs": {
                        "schema": {}
                    },
                    "kind": "Http",
                    "type": "Request"
                }
            }
        },
        "parameters": {
            "$connections": {
                "value": {
                    "office365": {
                        "connectionId": "",
                        "connectionName": "",
                        "id": "/subscriptions/f34b22a3-2202-4fb1-b040-1332bd928c84/providers/Microsoft.Web/locations/westus/managedApis/office365"
                    },
                    "servicebus_1": {
                        "connectionId": "",
                        "connectionName": "",
                        "id": "/subscriptions/f34b22a3-2202-4fb1-b040-1332bd928c84/providers/Microsoft.Web/locations/westus/managedApis/servicebus"
                    }
                }
            }
        }
    }
}